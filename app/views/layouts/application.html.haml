!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "Bal Asha Trust", :name => "description"}
    %meta{:content => "Bal Asha Trust", :name => "author"}

    %title Bal Asha Trust
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    = yield :head

  %body
    .container
      - if person_signed_in?
        / Static navbar
        %nav.navbar.navbar-inverse{:role => "navigation"}
          .container-fluid
            .navbar-header
              %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => root_path} Bal Asha
            #navbar.navbar-collapse.collapse
              %ul.nav.navbar-nav
                / %li.active
                /   %a{:href => "#"} Home
                - if current_person.admin?
                  %li{class: ("active" if params[:controller] == "people" && params[:action] != "change_password")}
                    %a{:href => people_path} People
                %li{class: ("active" if params[:controller] == "donors")}
                  %a{:href => donors_path} Donors
                %li{class: ("active" if params[:controller] == "categories")}
                  %a{:href => categories_path} Categories
                %li{class: ("active" if params[:controller] == "countries")}
                  %a{:href => countries_path} Countries
              %ul.nav.navbar-nav.navbar-right
                %li.dropdown
                  %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    = current_person.email
                    %span.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      %a{:href => change_password_people_path} Change Password
                    %li
                      = link_to "Sign out", destroy_person_session_path, method: :delete


      // container
      - if flash[:notice].present?
        = alert_box flash[:notice], dismissible: true, context: :success
      - if flash[:alert].present?
        = alert_box flash[:alert], dismissible: true, context: :danger

      = yield