= simple_form_for @item do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-xs-12.col-md-6.col-lg-4
        .form-group
          = f.input :name, input_html: {class: "form-control"}
          = f.input :current_rate, input_html: {class: "form-control"}
          = f.input :unit, input_html: {class: "form-control"}
          = f.input :minimum_quantity, input_html: {class: "form-control"}
          = f.association :category, collection: Category.all, prompt: "Choose a Category"
          = f.input :remarks, input_html: {class: "form-control", rows: 4}

  .form-actions
    = f.button :submit, "Save Item", class: "btn btn-primary"
