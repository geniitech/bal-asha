= simple_form_for @donation do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-xs-12.col-md-6.col-lg-4
        .form-group
          = f.input :donor_id, input_html: {class: "form-control"}
          = f.input :type_cd, label: "Type", collection: [['Cash', 0], ['Kind', 1]], selected: 0
          = f.input :amount, input_html: {class: "form-control"}
          = f.input :quantity, input_html: {class: "form-control"}
          = f.input :date, input_html: {class: "form-control"}
          = f.input :remarks, input_html: {class: "form-control"}
          = f.input :person_id, input_html: {class: "form-control"}

  .form-actions
    = f.button :submit, "Save Item", class: "btn btn-primary"

